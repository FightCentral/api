{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "typeRoots": [
      "./types", "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}